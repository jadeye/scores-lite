<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <ScrollView
        android:id="@+id/scrollView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="0dp" >

                <RadioGroup
                    android:id="@+id/radioGroup_shot_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="#B3C0E8"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <RadioButton
                        android:id="@+id/radio_shot_r00"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="goal"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r01"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="point"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r02"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="wide"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r03"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="off posts"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r04"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="saved"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r05"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="10dp"
                        android:text="free/pen conceded"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r06"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="10dp"
                        android:text="own puckout won"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_r07"
                        android:layout_width="140dp"
                        android:layout_height="28dp"
                        android:text="own puckout lost"
                        android:textSize="12sp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup_shot_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:background="#DDB3E8"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radio_shot_t00"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="from play"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t01"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="from free"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t02"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="from penalty"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t03"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="from 45/65"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t04"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="from sideline"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t05"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="20dp"
                        android:text="black card"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t06"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="yellow card"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_shot_t07"
                        android:layout_width="125dp"
                        android:layout_height="28dp"
                        android:text="red card"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>